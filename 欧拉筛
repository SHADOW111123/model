#include <iostream>
#include <vector>
using namespace std;

int n; // 全局变量，供 oulashai 使用

void oulashai(vector<int>& prime, vector<int>& isprime)
{
    for (int i = 2; i <= n; i++)
    {
        if (isprime[i])
        {
            prime.push_back(i);
        }
        for (int j = 0; j < prime.size(); j++)
        {
            if (i * prime[j] > n) break;
            isprime[i * prime[j]] = 0;
            if (i % prime[j] == 0)
            {
                break;
            }
        }
    }
}

int main()
{
    cout << "请输入一个整数 n：";
    cin >> n;

    vector<int> prime;                 // 用来存放质数
    vector<int> isprime(n + 1, 1);     // isprime[i] = 1 表示 i 是质数

    oulashai(prime, isprime);

    cout << "不超过 " << n << " 的质数有：" << endl;
    for (int p : prime)
        cout << p << " ";
    cout << endl;

    return 0;
}
